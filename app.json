{
  "expo": {
    "name": "Pocket English",
    "slug": "pocket-eng",
    "version": "3.0.0",
    "orientation": "portrait",
    "scheme": "pocketeng",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "icon": "./assets/images/app_icon.png",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kmsprod.pocketeng",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": ["audio"], 
        "NSMicrophoneUsageDescription": "This app uses the microphone to record your voice for speech recognition during English lessons.",
        "NSSpeechRecognitionUsageDescription": "This app uses the microphone to record your voice for speech recognition during English lessons.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.kmsprod.pocketeng",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-localization",
      "expo-audio",
      [
        "expo-splash-screen",
        {
          "ios": {
            "backgroundColor": "#ba9fc4",
            "image": "./assets/images/splash_screen.png",
            "resizeMode": "cover"
          },
          "android": {
            "backgroundColor": "#ba9fc4",
            "image": "./assets/images/splash_screen.png",
            "imageWidth": 150
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "93fde987-54de-46a4-91d1-6e346974b3bb"
      }
    },
    "owner": "mishanyawww"
  }
}
